# Fizzbo Strapi CMS Environment Configuration
# Copy this file to .env and fill in your actual values

# Strapi Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=1337

# Database Configuration - Shared Supabase PostgreSQL
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-HOST]:5432/postgres
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-HOST]:5432/postgres
DATABASE_SSL=true
DATABASE_PREFIX=strapi_
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Strapi Security Keys (Generate new ones for production)
APP_KEYS=generateNewKey1,generateNewKey2,generateNewKey3,generateNewKey4
ADMIN_JWT_SECRET=generateNewJWTSecret
API_TOKEN_SALT=generateNewAPITokenSalt
TRANSFER_TOKEN_SALT=generateNewTransferTokenSalt
SESSION_SECRET=generateNewSessionSecret

# Admin Configuration
ADMIN_REGISTRATION_ENABLED=false
ADMIN_FORGOT_PASSWORD_ENABLED=true
ADMIN_FROM_EMAIL=admin@fizzbo.com
ADMIN_REPLY_TO_EMAIL=noreply@fizzbo.com

# Session Configuration
SESSION_SECURE=true

# CORS Configuration for Fizzbo Frontend
FIZZBO_FRONTEND_URL=https://d11ze0u6raprps.cloudfront.net

# Supabase Integration
SUPABASE_URL=https://[YOUR-PROJECT].supabase.co
SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
SUPABASE_SERVICE_ROLE_KEY=[YOUR-SERVICE-ROLE-KEY]

# Logging
LOG_LEVEL=info

# Railway Deployment (automatically set by Railway)
RAILWAY_ENVIRONMENT_NAME=production
RAILWAY_PROJECT_ID=[AUTO-SET-BY-RAILWAY]
RAILWAY_SERVICE_NAME=[AUTO-SET-BY-RAILWAY]

# Feature Flags
WEBHOOKS_POPULATE_RELATIONS=false
FLAG_NPS=true
FLAG_PROMOTE_EE=true